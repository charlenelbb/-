.orders_main .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: #666;
}
.orders_main .order_item .order_num_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.orders_main .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.orders_main .order_item .order_price_row .order_price_value {
  color: var(--themeColor);
  font-size: 32rpx;
}
.orders_main .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.orders_main .order_item .order_time_row .order_time_value {
  color: #333;
}
