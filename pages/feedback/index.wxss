page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
}
.fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 10rpx;
}
.fb_main .fb_content {
  background-color: #fff;
}
.fb_main .fb_content textarea {
  padding: 20rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  justify-content: flex-start;
}
.fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ccc;
  margin-left: 10rpx;
}
.fb_main .fb_content .fb_tool .up_img_item {
  display: flex;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .form_btn_wrap {
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  background-color: var(--themeColor);
  color: #fff;
  width: 30%;
  margin: 20rpx 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
